<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.check_box :completed, {}, true, false%>
  <%= f.label "This task is not completed yet"%>
  <%= f.submit %>
<% end %>

<%= link_to 'Back to list', tasks_path %>
