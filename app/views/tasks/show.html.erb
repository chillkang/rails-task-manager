<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p><%= @task.completed? ? "This task is completed!" : "This task is not completed yet!" %></p>

<%= link_to 'Back to list', tasks_path %>
<%= link_to 'Edit the task', edit_task_path(@task) %>
<%= link_to "Delete #{@task.title}", task_path(@task), method: :delete, data: {confirm: 'Do you really want to?'} %>
